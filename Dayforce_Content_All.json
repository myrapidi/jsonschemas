      "description": "Employee pay adjustment records.",
      "type": "object",
      "properties": {
        "EmployeePayAdjustXRefCode": { "type": "string" },
        "OrgUnitXRefCode": { "type": "string" },
        "EmployeeXRefCode": { "type": "string" },
        "PayAdjustmentCodeXRefCode": { "type": "string" },
        "PayAdjustmentDate": { "type": "string", "format": "date-time" },
        "Hours": { "type": "number" },
        "Amount": { "type": "number" },
        "JobXRefCode": { "type": "string" },
        "DepartmentXRefCode": { "type": "string" },
        "PayCategoryXRefCode": { "type": "string" },
        "ProjectXRefCode": { "type": "string" },
        "DocketXRefCode": { "type": "string" },
