{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "title": "EmployeePayAdjustments",
  "description": "Employee Pay Adjustment records for Dayforce EmployeePayAdjustments POST.",
  "type": "object",
  "strictProperties": true,
  "key": "EmployeeXRefCode",
  "properties": {
    "EmployeeXRefCode": { "type": "string" },
    "Amount": { "type": "number" },
    "JobXRefCode": { "type": "string" },
    "DepartmentXRefCode": { "type": "string" },
    "PayCategoryXRefCode": { "type": "string" },
    "ProjectXRefCode": { "type": "string" },
    "DocketXRefCode": { "type": "string" },
    "PieceQuantity": { "type": "number" },
    "IsPremium": { "type": "boolean" },
    "IsDeleted": { "type": "boolean" },
    "Rate": { "type": "number" },
    "PayDate": { "type": "string", "format": "date-time" },
    "ReferenceDate": { "type": "string", "format": "date-time" },
    "EmployeeComment": { "type": "string" },
    "ManagerComment": { "type": "string" },
    "ManagerAuthorized": { "type": "boolean" },
    "EmployeeAuthorized": { "type": "boolean" },
    "AdjustPeriodStartDate": { "type": "string", "format": "date-time" },
    "AdjustPeriodEndDate": { "type": "string", "format": "date-time" },

    "LaborMetrics": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LaborMetricsItem"
      }
    }
  },

  "definitions": {
    "LaborMetricsItem": {
      "type": "object",
      "properties": {
        "LaborMetricsTypeXRefCode": { "type": "string" },
        "LaborMetricsCodeXRefCode": { "type": "string" }
      }
    }
  }
}
