{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://myrapidi.github.io/jsonschemas/dayforce_content_all#",
  "title": "Dayforce RaaS Content (Aligned to Endpoint Names)",
  "description": "Content schema to read Dayforce API rows. Each top-level definition matches its Dayforce endpoint name exactly.",
  "type": ["object"],
  "definitions": {
    "context": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Connection Context",
      "description": "Connection variables for Dayforce API (base URL and tenant).",
      "strictProperties": true,
      "type": ["object"],
      "definitions": {
        "base_url": {
          "description": "Dayforce base URL for API calls.",
          "example": "https://canstage251.dayforcehcm.com/Api/nmbstage/v1/",
          "readOnly": true,
          "type": ["string"]
        },
        "tenant": {
          "description": "Tenant alias used in Dayforce API.",
          "example": "nmbstage",
          "readOnly": true,
          "type": ["string"]
        }
      },
      "properties": {
        "base_url": { "$ref": "#/definitions/context/definitions/base_url" },
        "tenant": { "$ref": "#/definitions/context/definitions/tenant" }
      }
    },

    "Dayforce_Timesheet": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Timesheet",
      "description": "Timesheet records for employees.",
      "strictProperties": true,
      "type": ["object"],
      "definitions": {
        "TimesheetId": { "type": "string", "description": "Unique identifier for the timesheet.", "example": "TS12345", "readOnly": true },
        "EmployeeId": { "type": "string", "description": "Employee unique identifier.", "example": "E1001" },
        "StartDate": { "type": "string", "format": "date", "description": "Timesheet period start date.", "example": "2025-10-20" },
        "EndDate": { "type": "string", "format": "date", "description": "Timesheet period end date.", "example": "2025-10-26" },
        "Status": { "type": "string", "description": "Timesheet status.", "example": "Open" },
        "TotalHours": { "type": "number", "description": "Total hours worked.", "example": 40 },
        "CreatedDateTime": { "type": "string", "format": "date-time", "description": "Creation timestamp.", "example": "2025-10-20T08:00:00" },
        "ModifiedDateTime": { "type": "string", "format": "date-time", "description": "Last modified timestamp.", "example": "2025-10-20T12:00:00" },
        "Entries": {
          "type": "array",
          "description": "Daily timesheet entries.",
          "items": {
            "type": "object",
            "properties": {
              "Date": { "type": "string", "format": "date", "description": "Entry date.", "example": "2025-10-20" },
              "ProjectCode": { "type": "string", "description": "Project code.", "example": "PRJ001" },
              "HoursWorked": { "type": "number", "description": "Hours worked that day.", "example": 8 },
              "WorkType": { "type": "string", "description": "Type of work.", "example": "Regular" },
              "Comments": { "type": "string", "description": "Optional comments.", "example": "Worked on project setup" }
            },
            "required": ["Date", "HoursWorked"]
          }
        }
      },
      "properties": {
        "TimesheetId": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/TimesheetId" },
        "EmployeeId": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/EmployeeId" },
        "StartDate": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/StartDate" },
        "EndDate": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/EndDate" },
        "Status": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/Status" },
        "TotalHours": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/TotalHours" },
        "CreatedDateTime": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/CreatedDateTime" },
        "ModifiedDateTime": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/ModifiedDateTime" },
        "Entries": { "$ref": "#/definitions/Dayforce_Timesheet/definitions/Entries" }
      },
      "links": [
        {
          "title": "List Timesheets",
          "description": "Get all timesheets.",
          "href": "/Timesheets",
          "method": "GET",
          "rel": "instances",
          "targetSchema": { "$ref": "#/definitions/Dayforce_Timesheet" }
        },
        {
          "title": "Create Timesheet",
          "description": "Add new timesheet.",
          "href": "/Timesheets",
          "method": "POST",
          "rel": "create",
          "schema": { "$ref": "#/definitions/Dayforce_Timesheet" },
          "targetSchema": { "$ref": "#/definitions/Dayforce_Timesheet" }
        }
      ]
    },

    "Dayforce_EmployeeRawPunches": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "EmployeeRawPunches",
      "description": "Raw punch data for employees.",
      "strictProperties": true,
      "type": ["object"],
      "definitions": {
        "PunchId": { "type": "string", "description": "Punch unique ID.", "example": "P12345", "readOnly": true },
        "EmployeeId": { "type": "string", "description": "Employee unique identifier.", "example": "E1001" },
        "PunchDateTime": { "type": "string", "format": "date-time", "description": "Punch timestamp.", "example": "2025-10-20T08:00:00" },
        "PunchType": { "type": "string", "description": "Type of punch (ClockIn/Out).", "example": "ClockIn" },
        "JobCode": { "type": "string", "description": "Job code.", "example": "JOB01" },
        "DepartmentCode": { "type": "string", "description": "Department code.", "example": "DEPT01" },
        "Comments": { "type": "string", "description": "Optional comments.", "example": "" }
      },
      "properties": {
        "PunchId": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/PunchId" },
        "EmployeeId": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/EmployeeId" },
        "PunchDateTime": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/PunchDateTime" },
        "PunchType": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/PunchType" },
        "JobCode": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/JobCode" },
        "DepartmentCode": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/DepartmentCode" },
        "Comments": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches/definitions/Comments" }
      },
      "links": [
        {
          "title": "List Raw Punches",
          "description": "Get all raw punches.",
          "href": "/EmployeeRawPunches",
          "method": "GET",
          "rel": "instances",
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches" }
        },
        {
          "title": "Create Punch",
          "description": "Add new raw punch.",
          "href": "/EmployeeRawPunches",
          "method": "POST",
          "rel": "create",
          "schema": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches" },
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches" }
        }
      ]
    },

    "Dayforce_EmployeePayAdjustments": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "EmployeePayAdjustments",
      "description": "Employee pay adjustment records.",
      "strictProperties": true,
      "type": ["object"],
      "definitions": {
        "EmployeePayAdjustXRefCode": { "type": "string", "description": "Unique ID", "example": "#DF_601", "readOnly": true },
        "OrgUnitXRefCode": { "type": "string", "description": "Org unit code", "example": "NORTHERN_MAT_AND_BRIDGE_LIMITED_PARTNERSHIP" },
        "EmployeeXRefCode": { "type": "string", "description": "Employee code", "example": "R0207" },
        "PayAdjustmentCodeXRefCode": { "type": "string", "description": "Pay adjustment code", "example": "LOA_ICI" },
        "PayAdjustmentDate": { "type": "string", "format": "date-time", "description": "Adjustment date/time", "example": "2025-10-10T08:00:00Z" },
        "Hours": { "type": "number", "description": "Hours for adjustment", "example": 8 },
        "Amount": { "type": "number", "description": "Amount for adjustment", "example": 8 },
        "IsPremium": { "type": "boolean", "description": "Premium flag", "example": false },
        "IsDeleted": { "type": "boolean", "description": "Logical deletion", "example": false },
        "ManagerAuthorized": { "type": "boolean", "description": "Manager approved", "example": false },
        "EmployeeAuthorized": { "type": "boolean", "description": "Employee approved", "example": false },
        "PieceQuantity": { "type": "number", "description": "Piece quantity if applicable", "example": 0 }
      },
      "properties": {
        "EmployeePayAdjustXRefCode": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/EmployeePayAdjustXRefCode" },
        "OrgUnitXRefCode": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/OrgUnitXRefCode" },
        "EmployeeXRefCode": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/EmployeeXRefCode" },
        "PayAdjustmentCodeXRefCode": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/PayAdjustmentCodeXRefCode" },
        "PayAdjustmentDate": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/PayAdjustmentDate" },
        "Hours": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/Hours" },
        "Amount": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/Amount" },
        "IsPremium": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/IsPremium" },
        "IsDeleted": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/IsDeleted" },
        "ManagerAuthorized": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/ManagerAuthorized" },
        "EmployeeAuthorized": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/EmployeeAuthorized" },
        "PieceQuantity": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments/definitions/PieceQuantity" }
      },
      "links": [
        {
          "title": "List Pay Adjustments",
          "description": "Get all employee pay adjustments.",
          "href": "/EmployeePayAdjustments",
          "method": "GET",
          "rel": "instances",
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments" }
        },
        {
          "title": "Create Pay Adjustment",
          "description": "Add new employee pay adjustment.",
          "href": "/EmployeePayAdjustments",
          "method": "POST",
          "rel": "create",
          "schema": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments" },
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments" }
        }
      ]
    },

    "Dayforce_EmployeeTimeAdjustments": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "EmployeeTimeAdjustments",
      "description": "Employee time adjustment records.",
      "strictProperties": true,
      "type": ["object"],
      "definitions": {
        "EmployeeTimeAdjustXRefCode": { "type": "string", "description": "Unique adjustment ID", "example": "#DF_401", "readOnly": true },
        "OrgUnitXRefCode": { "type": "string", "description": "Org unit code", "example": "NORTHERN_MAT_AND_BRIDGE_LIMITED_PARTNERSHIP" },
        "EmployeeXRefCode": { "type": "string", "description": "Employee code", "example": "R0207" },
        "AdjustmentDate": { "type": "string", "format": "date-time", "description": "Adjustment date/time", "example": "2025-10-10T08:00:00Z" },
        "Hours": { "type": "number", "description": "Hours adjusted", "example": 2 },
        "ReasonCode": { "type": "string", "description": "Reason for adjustment", "example": "Late Punch" },
        "Comments": { "type": "string", "description": "Optional comments", "example": "Employee arrived late" },
        "IsDeleted": { "type": "boolean", "description": "Logical deletion flag", "example": false },
        "ManagerAuthorized": { "type": "boolean", "description": "Manager approved", "example": false },
        "EmployeeAuthorized": { "type": "boolean", "description": "Employee approved", "example": false }
      },
      "properties": {
        "EmployeeTimeAdjustXRefCode": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/EmployeeTimeAdjustXRefCode" },
        "OrgUnitXRefCode": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/OrgUnitXRefCode" },
        "EmployeeXRefCode": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/EmployeeXRefCode" },
        "AdjustmentDate": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/AdjustmentDate" },
        "Hours": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/Hours" },
        "ReasonCode": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/ReasonCode" },
        "Comments": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/Comments" },
        "IsDeleted": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/IsDeleted" },
        "ManagerAuthorized": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/ManagerAuthorized" },
        "EmployeeAuthorized": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments/definitions/EmployeeAuthorized" }
      },
      "links": [
        {
          "title": "List Time Adjustments",
          "description": "Get all employee time adjustments.",
          "href": "/EmployeeTimeAdjustments",
          "method": "GET",
          "rel": "instances",
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments" }
        },
        {
          "title": "Create Time Adjustment",
          "description": "Add new employee time adjustment.",
          "href": "/EmployeeTimeAdjustments",
          "method": "POST",
          "rel": "create",
          "schema": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments" },
          "targetSchema": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments" }
        }
      ]
    }
  },
  "properties": {
    "Dayforce_Timesheet": { "$ref": "#/definitions/Dayforce_Timesheet" },
    "Dayforce_EmployeeRawPunches": { "$ref": "#/definitions/Dayforce_EmployeeRawPunches" },
    "Dayforce_EmployeePayAdjustments": { "$ref": "#/definitions/Dayforce_EmployeePayAdjustments" },
    "Dayforce_EmployeeTimeAdjustments": { "$ref": "#/definitions/Dayforce_EmployeeTimeAdjustments" }
  }
}
