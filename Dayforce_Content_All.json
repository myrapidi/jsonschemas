        { "rel": "update", "href": "/EmployeePayAdjustments/{EmployeePayAdjustXRefCode}", "method": "PUT", "schema": { "$ref": "#/definitions/EmployeePayAdjustments" }, "targetSchema": { "$ref": "#/definitions/EmployeePayAdjustments" } }
