{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://myrapidi.github.io/jsonschemas/dayforce_content_all#",
  "title": "Dayforce Content (Aligned to Endpoint Names)",
  "description": "Content schema to read Dayforce API data. Each top-level definition matches its Dayforce endpoint name exactly.",
  "type": "object",
  "definitions": {
    "Timesheet": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Timesheet",
      "description": "Timesheet records for employees.",
      "strictProperties": true,
      "type": "object",
      "definitions": {
        "TimesheetId": { "type": "string" },
        "EmployeeId": { "type": "string" },
        "StartDate": { "type": "string", "format": "date" },
        "EndDate": { "type": "string", "format": "date" },
        "Status": { "type": "string" },
        "TotalHours": { "type": "number" },
        "CreatedDateTime": { "type": "string", "format": "date-time" },
        "ModifiedDateTime": { "type": "string", "format": "date-time" },
        "Entries": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Date": { "type": "string", "format": "date" },
              "ProjectCode": { "type": "string" },
              "HoursWorked": { "type": "number" },
              "WorkType": { "type": "string" },
              "Comments": { "type": "string" }
            },
            "required": ["Date", "HoursWorked"]
          }
        }
      },
      "properties": {
        "TimesheetId": { "$ref": "#/definitions/Timesheet/definitions/TimesheetId" },
        "EmployeeId": { "$ref": "#/definitions/Timesheet/definitions/EmployeeId" },
        "StartDate": { "$ref": "#/definitions/Timesheet/definitions/StartDate" },
        "EndDate": { "$ref": "#/definitions/Timesheet/definitions/EndDate" },
        "Status": { "$ref": "#/definitions/Timesheet/definitions/Status" },
        "TotalHours": { "$ref": "#/definitions/Timesheet/definitions/TotalHours" },
        "CreatedDateTime": { "$ref": "#/definitions/Timesheet/definitions/CreatedDateTime" },
        "ModifiedDateTime": { "$ref": "#/definitions/Timesheet/definitions/ModifiedDateTime" },
        "Entries": { "$ref": "#/definitions/Timesheet/definitions/Entries" }
      },
      "links": [
        { "rel": "get", "href": "/Timesheet", "method": "GET", "targetSchema": { "$ref": "#/definitions/Timesheet" } },
        { "rel": "create", "href": "/Timesheet", "method": "POST", "schema": { "$ref": "#/definitions/Timesheet" }, "targetSchema": { "$ref": "#/definitions/Timesheet" } },
        { "rel": "update", "href": "/Timesheet/{TimesheetId}", "method": "PUT", "schema": { "$ref": "#/definitions/Timesheet" }, "targetSchema": { "$ref": "#/definitions/Timesheet" } }
      ]
    },

