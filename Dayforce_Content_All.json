{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "title": "Dayforce Content All (Subset)",
  "type": "object",
  "definitions": {
    "EmployeePayAdjustment": {
      "type": "object",
      "strictProperties": false,
      "properties": {
        "EmployeePayAdjustXRefCode": { "type": "string" },
        "OrgUnitXRefCode": { "type": "string" },
        "EmployeeXRefCode": { "type": "string" },
        "PayAdjustmentCodeXRefCode": { "type": "string" },
        "PayAdjustmentDate": { "type": "string", "format": "date-time" },
        "Hours": { "type": "number" },
        "Amount": { "type": "number" },
        "JobXRefCode": { "type": "string" },
        "DepartmentXRefCode": { "type": "string" },
        "PayCategoryXRefCode": { "type": "string" },
        "ProjectXRefCode": { "type": "string" },
        "DocketXRefCode": { "type": "string" },
        "PieceQuantity": { "type": "number" },
        "IsPremium": { "type": "boolean" },
        "IsDeleted": { "type": "boolean" },
        "Rate": { "type": "number" },
        "PayDate": { "type": "string", "format": "date-time" },
        "ReferenceDate": { "type": "string", "format": "date-time" },
        "EmployeeComment": { "type": "string" },
        "ManagerComment": { "type": "string" },
        "ManagerAuthorized": { "type": "boolean" },
        "EmployeeAuthorized": { "type": "boolean" },
        "AdjustPeriodStartDate": { "type": "string", "format": "date-time" },
        "AdjustPeriodEndDate": { "type": "string", "format": "date-time" },

        "LaborMetrics": {
          "type": "array",
          "items": { "$ref": "#/definitions/LaborMetric" }
        }
      },
      "links": [
        {
          "rel": "instances",
          "href": "/EmployeePayAdjustments",
          "method": "GET",
          "targetSchema": {
            "type": "array",
            "items": { "$ref": "#/definitions/EmployeePayAdjustment" }
          }
        },
        {
          "rel": "create",
          "href": "/EmployeePayAdjustments",
          "method": "POST",
          "schema": { "$ref": "#/definitions/EmployeePayAdjustment" }
        }
      ]
    },

    "LaborMetrics": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "LaborMetrics",
      "description": "Labor Metrics records in Dayforce.",
      "strictProperties": true,
      "type": "object",
      "key": "LaborMetricsCodeXRefCode",
      "definitions": {
        "LaborMetricsCodeXRefCode": {
          "type": "string",
          "description": "Unique identifier for the labor metric code record.",
          "example": "LM001"
        },
        "ShortName": {
          "type": "string",
          "description": "Short display name of the labor metric code.",
          "example": "OT"
        },
        "LongName": {
          "type": "string",
          "description": "Full descriptive name of the labor metric code.",
          "example": "Overtime Code"
        },
        "EffectiveFrom": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when this labor metric code becomes effective."
        },
        "EffectiveEnd": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when this labor metric code expires."
        },
        "ClockTransferCode": {
          "type": "string",
          "description": "Clock transfer code for this labor metric."
        },
        "LedgerCode": {
          "type": "string",
          "description": "Ledger code associated with this labor metric."
        },
        "OrgUnitXRefCodes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of org unit codes linked to this labor metric."
        },
        "LaborMetricsTypeXRefCode": {
          "type": "string",
          "description": "Reference to the labor metrics type."
        },
        "IsDeleted": {
          "type": "boolean",
          "description": "Indicates if the record is deleted."
        },
        "CreatedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Record creation timestamp."
        },
        "ModifiedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Record modification timestamp."
        }
      },
      "properties": {
        "LaborMetricsCodeXRefCode": {
          "$ref": "#/definitions/LaborMetrics/definitions/LaborMetricsCodeXRefCode"
        },
        "ShortName": {
          "$ref": "#/definitions/LaborMetrics/definitions/ShortName"
        },
        "LongName": {
          "$ref": "#/definitions/LaborMetrics/definitions/LongName"
        },
        "EffectiveFrom": {
          "$ref": "#/definitions/LaborMetrics/definitions/EffectiveFrom"
        },
        "EffectiveEnd": {
          "$ref": "#/definitions/LaborMetrics/definitions/EffectiveEnd"
        },
        "ClockTransferCode": {
          "$ref": "#/definitions/LaborMetrics/definitions/ClockTransferCode"
        },
        "LedgerCode": {
          "$ref": "#/definitions/LaborMetrics/definitions/LedgerCode"
        },
        "OrgUnitXRefCodes": {
          "$ref": "#/definitions/LaborMetrics/definitions/OrgUnitXRefCodes"
        },
        "LaborMetricsTypeXRefCode": {
          "$ref": "#/definitions/LaborMetrics/definitions/LaborMetricsTypeXRefCode"
        },
        "IsDeleted": {
          "$ref": "#/definitions/LaborMetrics/definitions/IsDeleted"
        },
        "CreatedDateTime": {
          "$ref": "#/definitions/LaborMetrics/definitions/CreatedDateTime"
        },
        "ModifiedDateTime": {
          "$ref": "#/definitions/LaborMetrics/definitions/ModifiedDateTime"
        }
      },
      "links": [
        {
          "rel": "get",
          "href": "https://canconfig251.dayforcehcm.com/api/nmbconfig/v1/LaborMetrics/{LaborMetricsCodeXRefCode}",
          "method": "GET",
          "targetSchema": { "$ref": "#/definitions/LaborMetrics" }
        },
        {
          "rel": "create",
          "href": "https://canconfig251.dayforcehcm.com/api/nmbconfig/v1/LaborMetrics",
          "method": "POST",
          "schema": { "$ref": "#/definitions/LaborMetrics" },
          "targetSchema": { "$ref": "#/definitions/LaborMetrics" }
        },
        {
          "rel": "patch",
          "href": "https://canconfig251.dayforcehcm.com/api/nmbconfig/v1/LaborMetrics/{LaborMetricsCodeXRefCode}",
          "method": "PATCH",
          "schema": { "$ref": "#/definitions/LaborMetrics" },
          "targetSchema": { "$ref": "#/definitions/LaborMetrics" }
        }
      ]
    }
  },
  "links": [
    {
      "rel": "instances",
      "href": "/LaborMetrics",
      "method": "GET",
      "targetSchema": {
        "type": "array",
        "items": { "$ref": "#/definitions/LaborMetric" }
      }
    },
    {
      "rel": "create",
      "href": "/LaborMetrics",
      "method": "POST",
      "schema": { "$ref": "#/definitions/LaborMetric" }
    }
  ]
}
