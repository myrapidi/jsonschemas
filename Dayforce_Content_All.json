    "LaborMetricTypes": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "LaborMetricTypes",
      "description": "Labor metric types for configuration and reporting.",
      "strictProperties": true,
      "type": "object",
      "definitions": {
        "LaborMetricTypeId": { "type": "string" },
        "Name": { "type": "string" },
