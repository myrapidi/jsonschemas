        "CreatedDateTime": {
          "$ref": "#/definitions/Timesheet/definitions/CreatedDateTime"
        },
        "ModifiedDateTime": {
          "$ref": "#/definitions/Timesheet/definitions/ModifiedDateTime"
        },
        "Entries": { "$ref": "#/definitions/Timesheet/definitions/Entries" }
      },
      "links": [
        {
          "rel": "get",
          "href": "/Timesheet",
          "method": "GET",
          "targetSchema": { "$ref": "#/definitions/Timesheet" }
        },
        {
          "rel": "create",
          "href": "/Timesheet",
          "method": "POST",
          "schema": { "$ref": "#/definitions/Timesheet" },
          "targetSchema": { "$ref": "#/definitions/Timesheet" }
        },
        {
          "rel": "update",
          "href": "/Timesheet/{TimesheetId}",
          "method": "PUT",
          "schema": { "$ref": "#/definitions/Timesheet" },
          "targetSchema": { "$ref": "#/definitions/Timesheet" }
        }
      ]
