    "Timesheet": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Timesheet",
      "description": "Timesheet records for employees.",
      "strictProperties": true,
      "type": "object",
      "definitions": {
        "TimesheetId": {
          "type": "string",
          "description": "Unique identifier for the timesheet.",
          "example": "TS12345"
        },
        "EmployeeId": {
          "type": "string",
          "description": "Employee unique identifier.",
          "example": "E1001"
        },
        "StartDate": {
          "type": "string",
          "format": "date",
          "description": "Timesheet period start date.",
          "example": "2025-10-20"
        },
        "EndDate": {
          "type": "string",
          "format": "date",
          "description": "Timesheet period end date.",
          "example": "2025-10-26"
        },
        "Status": {
          "type": "string",
          "description": "Timesheet status.",
          "example": "Open"
        },
        "TotalHours": {
          "type": "number",
          "description": "Total hours worked.",
          "example": 40
        },
        "CreatedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp.",
          "example": "2025-10-20T08:00:00"
        },
        "ModifiedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Last modified timestamp.",
          "example": "2025-10-20T12:00:00"
        },
        "Entries": {
          "type": "array",
          "description": "Daily timesheet entries.",
          "items": {
            "type": "object",
            "properties": {
              "Date": {
                "type": "string",
                "format": "date",
                "description": "Entry date.",
                "example": "2025-10-20"
              },
              "ProjectCode": {
                "type": "string",
                "description": "Project code.",
                "example": "PRJ001"
              },
              "HoursWorked": {
                "type": "number",
                "description": "Hours worked that day.",
                "example": 8
              },
              "WorkType": {
                "type": "string",
                "description": "Type of work.",
                "example": "Regular"
              },
              "Comments": {
                "type": "string",
                "description": "Optional comments.",
                "example": "Worked on project setup"
              }
            },
            "required": ["Date", "HoursWorked"]
          }
        }
      },
      "properties": {
        "TimesheetId": {
          "$ref": "#/definitions/Timesheet/definitions/TimesheetId"
        },
        "EmployeeId": {
          "$ref": "#/definitions/Timesheet/definitions/EmployeeId"
        },
        "StartDate": {
          "$ref": "#/definitions/Timesheet/definitions/StartDate"
        },
        "EndDate": { "$ref": "#/definitions/Timesheet/definitions/EndDate" },
        "Status": { "$ref": "#/definitions/Timesheet/definitions/Status" },
        "TotalHours": {
