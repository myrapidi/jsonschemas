      "strictProperties": true,
      "type": "object",
      "key": "LaborMetricsCodeXRefCode",
      "definitions": {
        "LaborMetricsCodeXRefCode": {
          "type": "string",
          "description": "Unique identifier for the labor metric code record.",
          "example": "LM001"
        },
        "ShortName": {
          "type": "string",
          "description": "Short display name of the labor metric code.",
          "example": "OT"
        },
        "LongName": {
          "type": "string",
          "description": "Full descriptive name of the labor metric code.",
          "example": "Overtime Code"
        },
        "EffectiveFrom": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when this labor metric code becomes effective.",
          "example": "2025-01-01T00:00:00Z"
        },
        "EffectiveEnd": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time when this labor metric code expires (if applicable).",
          "example": "2025-12-31T23:59:59Z"
        },
        "ClockTransferCode": {
          "type": "string",
          "description": "Clock transfer code associated with this labor metric code (optional).",
          "example": "CT01"
        },
        "LedgerCode": {
          "type": "string",
          "description": "Ledger code associated with this labor metric code (optional).",
          "example": "LGR001"
        },
        "OrgUnitXRefCodes": {
          "type": "array",
          "description": "List of organization unit reference codes linked to this labor metric code.",
          "items": {
            "type": "string",
            "description": "Reference code for an organization unit.",
            "example": "ORG001"
          }
        },
        "LaborMetricsTypeXRefCode": {
          "type": "string",
          "description": "Reference to the labor metric type this code belongs to.",
