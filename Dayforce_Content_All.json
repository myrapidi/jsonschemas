        "IsPremium": { "type": "boolean" },
        "IsDeleted": { "type": "boolean" },
        "Rate": { "type": "number" },
        "PayDate": { "type": "string", "format": "date-time" },
        "ReferenceDate": { "type": "string", "format": "date" },
        "EmployeeComment": { "type": "string" },
        "ManagerComment": { "type": "string" },
        "ManagerAuthorized": { "type": "boolean" },
        "EmployeeAuthorized": { "type": "boolean" },
        "AdjustPeriodStartDate": { "type": "string", "format": "date-time" },
        "AdjustPeriodEndDate": { "type": "string", "format": "date-time" }
