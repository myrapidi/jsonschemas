        "OrgUnitXRefCode": { "type": "string" },
        "DateWorked": { "type": "string", "format": "date" },
        "StartTime": { "type": "string", "format": "date-time" },
        "EndTime": { "type": "string", "format": "date-time" },
        "Hours": { "type": "number" },
        "PayCodeXRefCode": { "type": "string" },
        "IsDeleted": { "type": "boolean" },
        "EmployeeComment": { "type": "string" },
        "ManagerComment": { "type": "string" },
        "ManagerAuthorized": { "type": "boolean" },
        "EmployeeAuthorized": { "type": "boolean" }
      },
      "required": ["EmployeeXRefCode", "OrgUnitXRefCode", "DateWorked", "Hours"]
