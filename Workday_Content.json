{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://myrapidi.github.com/jsonschemas/workday_Content#",
  "title": "Workday Positions Report Content (Storyblok-style, no-space)",
  "description": "Content schema to read Workday report rows (RaaS).",
  "type": [
    "object"
  ],
  "definitions": {
    "context": {
      "description": "Connection variables for Workday RaaS (tenant alias and report path).",
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "stability": "beta",
      "strictProperties": true,
      "title": "Connection Context",
      "type": [
        "object"
      ],
      "definitions": {
        "tenant": {
          "description": "Workday tenant alias used in the RaaS path.",
          "example": "standardbiotools_preview",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "report_path": {
          "description": "Workday report path in Workday (folder/name).",
          "example": "ISU_mulesoft/D365_Positions_Report",
          "readOnly": true,
          "type": [
            "string"
          ]
        }
      },
      "properties": {
        "tenant": {
          "$ref": "#/definitions/context/definitions/tenant"
        },
        "report_path": {
          "$ref": "#/definitions/context/definitions/report_path"
        }
      }
    },
    "report": {
      "description": "A single row from the Workday Positions report.",
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "stability": "beta",
      "strictProperties": true,
      "title": "Report Row",
      "type": [
        "object"
      ],
      "definitions": {
        "Full_Name": {
          "description": "Worker's full name.",
          "example": "Alicia GÃ³mez",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Management_Level": {
          "description": "Management level per Workday.",
          "example": "Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Effect_Date_for_Current_Pos": {
          "description": "Position effective date (YYYY-MM-DD).",
          "example": "2025-07-01",
          "readOnly": true,
          "format": "date",
          "type": [
            "string"
          ]
        },
        "Position_ID": {
          "description": "Unique identifier of the position.",
          "example": "POS-00012345",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Most_Rec_Pos_Change": {
          "description": "Most recent position change date (YYYY-MM-DD).",
          "example": "2025-08-15",
          "readOnly": true,
          "format": "date",
          "type": [
            "string"
          ]
        },
        "Business_Title": {
          "description": "Worker's business title.",
          "example": "Senior Project Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "Fetch report metadata.",
          "href": "/ccx/service/customreport2/standardbiotools_preview/ISU_mulesoft/D365_Positions_Report",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "$ref": "#/definitions/context"
          },
          "title": "Info"
        },
        {
          "description": "List report rows.",
          "href": "/ccx/service/customreport2/standardbiotools_preview/ISU_mulesoft/D365_Positions_Report",
          "method": "GET",
          "rel": "instances",
          "schema": {
            "type": [
              "object"
            ]
          },
          "targetSchema": {
            "type": [
              "array"
            ],
            "items": {
              "$ref": "#/definitions/report"
            }
          },
          "title": "List"
        },
        {
          "description": "Create or upsert a downstream record (e.g., Storyblok entry). Note: Workday RaaS itself is read-only; this POST is for the integration target.",
          "href": "urn:rapidi:target:create",
          "method": "POST",
          "rel": "create",
          "title": "Create (target)",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": "string"
              },
              "Management_Level": {
                "type": "string"
              },
              "Effect_Date_for_Current_Pos": {
                "type": "string",
                "format": "date"
              },
              "Position_ID": {
                "type": "string"
              },
              "Most_Rec_Pos_Change": {
                "type": "string",
                "format": "date"
              },
              "Business_Title": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "targetSchema": {
            "type": [
              "object"
            ],
            "properties": {
              "status": {
                "type": [
                  "string"
                ],
                "example": "accepted"
              },
              "id": {
                "type": [
                  "string"
                ],
                "description": "Target system identifier"
              }
            }
          }
        },
        {
          "description": "Patch/update a downstream record by key (e.g., Storyblok entry). Note: Workday RaaS is read-only; this PATCH targets the destination system.",
          "href": "urn:rapidi:target:update",
          "method": "PATCH",
          "rel": "update",
          "title": "Patch (target)",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": "string"
              },
              "Management_Level": {
                "type": "string"
              },
              "Effect_Date_for_Current_Pos": {
                "type": "string",
                "format": "date"
              },
              "Position_ID": {
                "type": "string"
              },
              "Most_Rec_Pos_Change": {
                "type": "string",
                "format": "date"
              },
              "Business_Title": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "targetSchema": {
            "type": [
              "object"
            ],
            "properties": {
              "status": {
                "type": [
                  "string"
                ],
                "example": "updated"
              },
              "id": {
                "type": [
                  "string"
                ],
                "description": "Target system identifier"
              }
            }
          }
        }
      ],
      "properties": {
        "Full_Name": {
          "$ref": "#/definitions/report/definitions/Full_Name"
        },
        "Management_Level": {
          "$ref": "#/definitions/report/definitions/Management_Level"
        },
        "Effect_Date_for_Current_Pos": {
          "$ref": "#/definitions/report/definitions/Effect_Date_for_Current_Pos"
        },
        "Position_ID": {
          "$ref": "#/definitions/report/definitions/Position_ID"
        },
        "Most_Rec_Pos_Change": {
          "$ref": "#/definitions/report/definitions/Most_Rec_Pos_Change"
        },
        "Business_Title": {
          "$ref": "#/definitions/report/definitions/Business_Title"
        }
      }
    }
  },
  "properties": {
    "report": {
      "$ref": "#/definitions/report"
    }
  },
  "links": [
    {
      "description": "Bulk create in downstream target from an array of report rows.",
      "href": "urn:rapidi:target:bulk_create",
      "method": "POST",
      "rel": "bulk-create",
      "title": "Bulk Create (target)",
      "schema": {
        "type": [
          "array"
        ],
        "items": {
          "type": [
            "object"
          ],
          "properties": {
            "Full_Name": {
              "type": "string"
            },
            "Management_Level": {
              "type": "string"
            },
            "Effect_Date_for_Current_Pos": {
              "type": "string",
              "format": "date"
            },
            "Position_ID": {
              "type": "string"
            },
            "Most_Rec_Pos_Change": {
              "type": "string",
              "format": "date"
            },
            "Business_Title": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "targetSchema": {
        "type": [
          "object"
        ],
        "properties": {
          "status": {
            "type": [
              "string"
            ]
          },
          "count": {
            "type": [
              "integer"
            ]
          }
        }
      }
    }
  ]
}
