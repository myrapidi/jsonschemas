{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://myrapidi.github.com/jsonschemas/workday_raas_–_root_flat_content",
  "title": "Workday RaaS – Root Flat Content",
  "description": "All fields exposed at root level for easy consumption",
  "type": "object",
  "properties": {
    "Full_Name": {
      "description": "Worker's full name.",
      "example": "Alicia Gómez",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "Management_Level": {
      "description": "Management level per Workday.",
      "example": "Manager",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "Effect_Date_for_Current_Pos": {
      "description": "Position effective date (YYYY-MM-DD).",
      "example": "2025-07-01",
      "readOnly": true,
      "type": "string",
      "format": "date"
    },
    "Position_ID": {
      "description": "Unique identifier of the position.",
      "example": "POS-00012345",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "Most_Rec_Pos_Change": {
      "description": "Most recent position change date (YYYY-MM-DD).",
      "example": "2025-08-15",
      "readOnly": true,
      "type": "string",
      "format": "date"
    },
    "Business_Title": {
      "description": "Worker's business title.",
      "example": "Senior Project Manager",
      "readOnly": true,
      "type": [
        "string"
      ]
    }
  },
  "required": [
    "Full_Name",
    "Management_Level",
    "Effect_Date_for_Current_Pos",
    "Position_ID",
    "Most_Rec_Pos_Change",
    "Business_Title"
  ],
  "links": [
    {
      "rel": "self",
      "description": "Fetch full Workday report (unfiltered).",
      "href": "https://wd5-impl-services1.workday.com/ccx/service/customreport2/standardbiotools_preview/ISU_mulesoft/WD_D365_Positions_Report?format=json",
      "method": "GET"
    },
    {
      "rel": "instances",
      "description": "Fetch filtered report using Position_ID prompt.",
      "href": "https://wd5-impl-services1.workday.com/ccx/service/customreport2/standardbiotools_preview/ISU_mulesoft/WD_D365_Positions_Report?Position_ID={Position_ID}&format=json",
      "method": "GET",
      "schema": {
        "type": "object",
        "properties": {
          "Position_ID": {
            "type": "string",
            "description": "Workday report prompt key: Position_ID",
            "example": "POS-133"
          }
        },
        "required": [
          "Position_ID"
        ]
      }
    }
  ]
}
