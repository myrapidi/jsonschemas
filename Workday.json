{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://myrapidi.github.io/jsonschemas/Workday#",
  "title": "Workday RaaS Schema (All Reports)",
  "description": "Unified schema for Workday RaaS reports (Employee, Position Worker Assignment, Position Hierarchies). Uses dynamic placeholders in URLs and is read-only (GET). POST/PATCH links are illustrative only.",
  "type": [
    "object"
  ],
  "definitions": {
    "context": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "StandardBioTools Workday API",
      "description": "Connection variables for Workday RaaS (tenant alias and report path).",
      "stability": "beta",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "tenant": {
          "description": "Workday tenant alias used in the RaaS path.",
          "example": "standardbiotools_preview",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "folder": {
          "description": "Workday report folder.",
          "example": "ISU_mulesoft",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Report_Name": {
          "description": "Workday report name (dynamic).",
          "example": "D365_Employee",
          "readOnly": true,
          "type": [
            "string"
          ],
          "enum": [
            "D365_Employee",
            "D365_Position_Worker_Assignment",
            "D365_Position_Hierarchies"
          ]
        }
      },
      "properties": {
        "tenant": {
          "$ref": "#/definitions/context/definitions/tenant"
        },
        "folder": {
          "$ref": "#/definitions/context/definitions/folder"
        },
        "Report_Name": {
          "$ref": "#/definitions/context/definitions/Report_Name"
        }
      }
    },
    "report": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Report",
      "description": "Rows for the Workday Positions RaaS report.",
      "stability": "beta",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "Full_Name": {
          "description": "Worker's full name.",
          "example": "Alicia Gomez",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Management_Level": {
          "description": "Management level per Workday.",
          "example": "Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Effect_Date_for_Current_Pos": {
          "description": "Position effective date (YYYY-MM-DD).",
          "example": "2025-07-01",
          "format": "date",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Position_ID": {
          "description": "Unique identifier of the position.",
          "example": "POS-00012345",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Most_Rec_Pos_Change": {
          "description": "Most recent position change date (YYYY-MM-DD).",
          "example": "2025-08-15",
          "readOnly": true,
          "format": "date",
          "type": [
            "string"
          ]
        },
        "Business_Title": {
          "description": "Worker's business title.",
          "example": "Senior Project Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        }
      },
      "properties": {
        "Full_Name": {
          "$ref": "#/definitions/report/definitions/Full_Name"
        },
        "Management_Level": {
          "$ref": "#/definitions/report/definitions/Management_Level"
        },
        "Effect_Date_for_Current_Pos": {
          "$ref": "#/definitions/report/definitions/Effect_Date_for_Current_Pos"
        },
        "Position_ID": {
          "$ref": "#/definitions/report/definitions/Position_ID"
        },
        "Most_Rec_Pos_Change": {
          "$ref": "#/definitions/report/definitions/Most_Rec_Pos_Change"
        },
        "Business_Title": {
          "$ref": "#/definitions/report/definitions/Business_Title"
        }
      },
      "links": [
        {
          "title": "Info",
          "description": "Fetch report metadata.",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        },
        {
          "title": "List",
          "description": "List report rows with optional query parameters.",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "GET",
          "rel": "instances",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Position_ID": {
                "description": "Filter: Position ID (exact match).",
                "example": "POS-133",
                "type": [
                  "string"
                ]
              },
              "As_Of_Date": {
                "description": "Filter: As of date (YYYY-MM-DD).",
                "example": "2025-08-01",
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "type": [
              "array"
            ],
            "items": {
              "$ref": "#/definitions/report"
            }
          }
        },
        {
          "title": "Create",
          "description": "Create a new Position (illustrative only; RaaS is read-only).",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "POST",
          "rel": "create",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": [
                  "string"
                ]
              },
              "Management_Level": {
                "type": [
                  "string"
                ]
              },
              "Effect_Date_for_Current_Pos": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Position_ID": {
                "type": [
                  "string"
                ]
              },
              "Most_Rec_Pos_Change": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Business_Title": {
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        },
        {
          "title": "Update",
          "description": "Update an existing Position (illustrative only; RaaS is read-only).",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "PATCH",
          "rel": "update",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": [
                  "string"
                ]
              },
              "Management_Level": {
                "type": [
                  "string"
                ]
              },
              "Effect_Date_for_Current_Pos": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Position_ID": {
                "type": [
                  "string"
                ]
              },
              "Most_Rec_Pos_Change": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Business_Title": {
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        }
      ]
    }
  },
  "properties": {
    "report": {
      "$ref": "#/definitions/report"
    }
  },
  "links": [
    {
      "href": "https://wd5-impl-services1.workday.com",
      "rel": "self",
      "title": "Workday Host"
    },
    {
      "href": "/jsonschemas/Workday",
      "method": "GET",
      "rel": "self",
      "title": "This Schema"
    }
  ]
}
