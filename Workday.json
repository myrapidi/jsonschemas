              "type": "string",
              "format": "date",
              "description": "Position effective date."
            },
            "Position_ID": {
              "type": "string",
              "description": "Unique identifier of the position."
            },
            "Most_Rec_Pos_Change": {
              "type": "string",
              "format": "date",
              "description": "Most recent position change date."
            },
            "Business_Title": {
              "type": "string",
              "description": "Worker's business title."
            }
          }
        }
      }
