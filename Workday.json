{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://myrapidi.github.com/jsonschemas/workday_final_field_visible",
  "title": "Workday RaaS Schema with Visible Fields",
  "description": "Minimal, no-indirection schema to ensure Rapidi reads fields",
  "type": "object",
  "properties": {
    "Report_Entry": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Full_Name": {
            "type": "string",
            "description": "Worker's full name.",
            "example": "Alicia GÃ³mez"
          },
          "Management_Level": {
            "type": "string",
            "description": "Management level per Workday.",
            "example": "Manager"
          },
          "Effect_Date_for_Current_Pos": {
            "type": "string",
            "format": "date",
            "description": "Position effective date (YYYY-MM-DD).",
            "example": "2025-07-01"
          },
          "Position_ID": {
            "type": "string",
            "description": "Unique identifier of the position.",
            "example": "POS-00012345"
          },
          "Most_Rec_Pos_Change": {
            "type": "string",
            "format": "date",
            "description": "Most recent position change date (YYYY-MM-DD).",
            "example": "2025-08-15"
          },
          "Business_Title": {
            "type": "string",
            "description": "Worker's business title.",
            "example": "Senior Project Manager"
          }
        }
      }
    }
  },
  "links": [
    {
      "rel": "instances",
      "href": "/Report_Entry",
      "method": "GET",
      "targetSchema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Full_Name": {
              "type": "string",
              "description": "Worker's full name."
            },
            "Management_Level": {
              "type": "string",
              "description": "Management level per Workday."
