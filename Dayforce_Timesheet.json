{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "Dayforce_Timesheet": {
      "type": "object",
      "properties": {
        "TimesheetId": {
          "type": "string",
          "description": "Unique identifier for the timesheet."
        },
        "EmployeeId": {
          "type": "string",
          "description": "Unique identifier of the employee associated with this timesheet."
        },
        "StartDate": {
          "type": "string",
          "format": "date",
          "description": "Start date of the timesheet period (YYYY-MM-DD)."
        },
        "EndDate": {
          "type": "string",
          "format": "date",
          "description": "End date of the timesheet period (YYYY-MM-DD)."
        },
        "Status": {
          "type": "string",
          "description": "Status of the timesheet (e.g. Open, Submitted, Approved)."
        },
        "TotalHours": {
          "type": "number",
          "description": "Total hours worked during the period."
        },
        "CreatedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "When the timesheet was created."
        },
        "ModifiedDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "When the timesheet was last modified."
        },
        "Entries": {
          "type": "array",
          "description": "List of daily work entries belonging to this timesheet.",
          "items": {
            "type": "object",
            "properties": {
              "Date": {
                "type": "string",
                "format": "date",
                "description": "Date of the entry (YYYY-MM-DD)."
              },
              "ProjectCode": {
                "type": "string",
                "description": "Optional project or task code."
              },
              "HoursWorked": {
                "type": "number",
                "description": "Hours worked for the given day."
              },
              "WorkType": {
                "type": "string",
                "description": "Type of work (e.g. Regular, Overtime, Holiday)."
              },
              "Comments": {
                "type": "string",
                "description": "Optional comments or notes for the day."
              }
            }
          }
        }
      }
    }
  },
  "properties": {
    "Dayforce_Timesheet": {
      "$ref": "#/definitions/Dayforce_Timesheet"
    }
  },
  "links": [
    {
      "rel": "self",
      "href": "/Dayforce_Timesheet"
    }
  ]
}
