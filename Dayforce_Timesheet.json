{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://myrapidi.github.io/jsonschemas/Dayforce_Timesheet#",
  "title": "Dayforce Timesheet",
  "description": "Schema for Dayforce Employee Timesheet records",
  "type": "object",
  "properties": {
    "EmployeeXRefCode": { "type": "string", "description": "Employee external reference code" },
    "OrgUnitXRefCode": { "type": "string", "description": "Organization unit external reference code" },
    "WorkAssignmentXRefCode": { "type": "string", "description": "Work assignment reference code" },
    "TimesheetDate": { "type": "string", "format": "date-time", "description": "Date for the timesheet entry" },
    "StartTime": { "type": "string", "format": "date-time", "description": "Start time for the work period" },
    "EndTime": { "type": "string", "format": "date-time", "description": "End time for the work period" },
    "HoursWorked": { "type": "number", "description": "Number of hours worked" },
    "MealBreakMinutes": { "type": "integer", "description": "Length of meal break in minutes" },
    "Comment": { "type": "string", "description": "Optional notes or comments" },
    "IsDeleted": { "type": "boolean", "description": "Indicates if record is deleted" }
  },
  "required": [
    "EmployeeXRefCode",
    "OrgUnitXRefCode",
    "TimesheetDate"
  ]
}
