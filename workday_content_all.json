{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://myrapidi.github.io/jsonschemas/workday_content_all#",
  "title": "Workday RaaS Content (All Reports)",
  "description": "Content schema to read Workday report rows (RaaS). Note: RaaS is read-only (GET). POST/PATCH links are illustrative only.",
  "type": [
    "object"
  ],
  "definitions": {
    "context": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Connection Context",
      "description": "Connection variables for Workday RaaS (tenant alias and report path).",
      "stability": "beta",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "tenant": {
          "description": "Workday tenant.",
          "example": "standardbiotools_preview",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "folder": {
          "description": "Workday report folder.",
          "example": "ISU_mulesoft",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Report_Name": {
          "description": "Report name to call dynamically.",
          "example": "D365_Employee",
          "readOnly": true,
          "type": [
            "string"
          ],
          "enum": [
            "D365_Employee",
            "D365_Position_Worker_Assignment",
            "D365_Position_Hierarchies"
          ]
        }
      },
      "properties": {
        "tenant": {
          "$ref": "#/definitions/context/definitions/tenant"
        },
        "folder": {
          "$ref": "#/definitions/context/definitions/folder"
        },
        "Report_Name": {
          "$ref": "#/definitions/context/definitions/Report_Name"
        }
      }
    },
    "report": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Report Row",
      "description": "A single row from the Workday Positions report.",
      "stability": "beta",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "Full_Name": {
          "description": "Worker's full name.",
          "example": "Alicia GÃ³mez",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Management_Level": {
          "description": "Management level per Workday.",
          "example": "Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Effect_Date_for_Current_Pos": {
          "description": "Position effective date (YYYY-MM-DD).",
          "example": "2025-07-01",
          "readOnly": true,
          "format": "date",
          "type": [
            "string"
          ]
        },
        "Position_ID": {
          "description": "Unique identifier of the position.",
          "example": "POS-00012345",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "Most_Rec_Pos_Change": {
          "description": "Most recent position change date (YYYY-MM-DD).",
          "example": "2025-08-15",
          "readOnly": true,
          "format": "date",
          "type": [
            "string"
          ]
        },
        "Business_Title": {
          "description": "Worker's business title.",
          "example": "Senior Project Manager",
          "readOnly": true,
          "type": [
            "string"
          ]
        }
      },
      "properties": {
        "Full_Name": {
          "$ref": "#/definitions/report/definitions/Full_Name"
        },
        "Management_Level": {
