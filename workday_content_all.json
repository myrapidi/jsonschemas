        },
        "Business_Title": {
          "$ref": "#/definitions/report/definitions/Business_Title"
        }
      },
      "links": [
        {
          "title": "Create",
          "description": "Create a new position (illustrative only; RaaS is read-only).",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "POST",
          "rel": "create",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": [
                  "string"
                ]
              },
              "Management_Level": {
                "type": [
                  "string"
                ]
              },
              "Effect_Date_for_Current_Pos": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Position_ID": {
                "type": [
                  "string"
                ]
              },
              "Most_Rec_Pos_Change": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Business_Title": {
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        },
        {
          "title": "Update",
          "description": "Update an existing position (illustrative only; RaaS is read-only).",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "PATCH",
          "rel": "update",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Full_Name": {
                "type": [
                  "string"
                ]
              },
              "Management_Level": {
                "type": [
                  "string"
                ]
              },
              "Effect_Date_for_Current_Pos": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Position_ID": {
                "type": [
                  "string"
                ]
              },
              "Most_Rec_Pos_Change": {
                "type": [
                  "string"
                ],
                "format": "date"
              },
              "Business_Title": {
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        },
        {
          "title": "Info",
          "description": "Fetch report metadata.",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "$ref": "#/definitions/report"
          }
        },
        {
          "title": "List",
          "description": "List existing positions.",
          "href": "/ccx/service/customreport2/{tenant}/{folder}/{Report_Name}?format=json",
          "method": "GET",
          "rel": "instances",
          "schema": {
            "type": [
              "object"
            ],
            "properties": {
              "Position_ID": {
                "description": "Filter: Position ID (exact match).",
                "example": "POS-250103",
                "type": [
                  "string"
                ]
              }
            }
          },
          "targetSchema": {
            "type": [
              "array"
            ],
            "items": {
              "$ref": "#/definitions/report"
            }
          }
        }
      ]
    },
